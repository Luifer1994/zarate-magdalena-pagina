---
import { Image } from "astro:assets";
import logo from "../assets/escudo-zarate.png";
import zarateData from "../data/zarate.json";

const { footer } = zarateData.content;
const currentYear = new Date().getFullYear();
---

<footer class="bg-white text-slate-800 pt-20 pb-10 border-t border-slate-100">
  <div
    class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-8 mb-12"
  >
    <div class="flex items-center gap-4">
      <a href="/" class="flex items-center gap-3 group z-50 relative">
        <Image
          src={logo}
          alt="Escudo de ZÃ¡rate, Magdalena"
          width={64}
          height={64}
          class="w-auto h-12 md:h-16"
        />
      </a>
      <div>
        <h4 class="font-serif text-xl font-bold text-zarate-blue tracking-wide">
          {footer.title}
        </h4>
        <p class="text-xs text-slate-500 uppercase tracking-widest">
          {footer.subtitle}
        </p>
      </div>
    </div>

    <!--  <div class="flex gap-8 text-sm font-semibold tracking-wide">
      {
        footer.links.map((link) => (
          <a
            href={link.url}
            class="text-slate-500 hover:text-zarate-earth transition-colors duration-300 uppercase text-xs"
          >
            {link.text}
          </a>
        ))
      }
    </div> -->

    <div class="flex gap-4">
      {
        footer.social.map((social) => (
          <a
            href={social.url}
            target="_blank"
            class="w-10 h-10 rounded-full bg-slate-100 border border-slate-100 hover:bg-[var(--social-hover)] hover:border-[var(--social-hover)] hover:text-white flex items-center justify-center transition-all duration-300 cursor-pointer hover:scale-110 social-icon-svg text-slate-600"
            aria-label={social.name}
            style={{ "--social-hover": social.color }}
          >
            <span
              class="w-8 h-8 flex items-center justify-center"
              set:html={social.icon}
            />
          </a>
        ))
      }
    </div>
  </div>

  <div
    class="text-center text-slate-400 text-xs border-t border-slate-100 pt-8"
  >
    &copy; {currentYear}
    <span set:html={footer.copyright} />
  </div>
</footer>
